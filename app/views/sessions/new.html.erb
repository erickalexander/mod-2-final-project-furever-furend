<h1 class = 'text-center'>Login Page</h1>
<%= form_tag sessions_path do %>
    <p>
      <%= label_tag :username %>
      <%= text_field_tag :username, '', class: 'form-control', placeholder: "Enter your Username" %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: "Enter your Password" %>
    </p>


  <%= submit_tag "Sign in",  class: 'btn btn-primary' %>
<% end %>
