<% if @filtered %>
<h1>List of potential Fur-ends!</h1>
<h3>There are <%=@filtered.count%> furends we recommend for you!</h3>
<ul>
  <%@filtered.each do |dog|%>
    <li><%=link_to dog.breed, dog_path(dog)%></li>
  <% end %>
</ul>

<!-- user/:id/:edit -->
<br>
  <h3>Add to your saved dogs:</h3>
  <%= form_tag("/users/#{@user.id}/dogs", method: :patch) do %>
    <%=collection_check_boxes :user, :dogs, @filtered, :id, :breed%>
    <%= submit_tag "Add Dog" %>
  <%end%><br>
<%end%>
