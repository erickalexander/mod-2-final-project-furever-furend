<div class="center_div_index">

<h1 style="font-family:verdana;" class = 'text-center'>Sign Up and Find Your Furever Furend!</h1>
<br>
<div class="center_div">
  <%= form_for @user, url: users_path, method: :post  do |f|%>
    <%=f.label :username  %><br>
    <%=f.text_field(:username, {:class => 'form-control'})%><br>
    <%=f.label :password  %><br>
    <%=f.password_field(:password, {:class => 'form-control'})%><br>
    <%=f.label :confirm_password  %><br>
    <%=f.password_field(:password_confirmation, {:class => 'form-control'})%><br>
    <%=f.submit({:class => 'btn btn-secondary'})%>
  <% end %>
</div>

</div>



