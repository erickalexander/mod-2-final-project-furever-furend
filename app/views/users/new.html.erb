<!-- Create username/pw_digest -->
<div style="background-color: rgba(211, 211, 211, 0.5); width:50%; margin-left: auto; margin-right: auto; margin-top: auto; height: 350px">
  <h1 class = 'text-center'>Sign Up</h1>
  <div class="center_div">
    <%= form_for @user, url: users_path, method: :post  do |f|%>
      <%=f.label :username  %><br>
      <%=f.text_field(:username, {:class => 'form-control'})%><br>
      <%=f.label :password  %><br>
      <%=f.password_field(:password, {:class => 'form-control'})%><br>
      <%=f.label :confirm_password  %><br>
      <%=f.password_field(:password_confirmation, {:class => 'form-control'})%><br>
      <%=f.submit({:class => 'btn btn-success'})%>
    <% end %>
  </div>
</div>
<img src="https://goo.gl/Fvy8ve" id="bg" alt="dog_home">
