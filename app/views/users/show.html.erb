<%if @user.dogs.count == 0%>
  <p>You have no saved dogs yet!</p>
<%else%>
<h1>Your list of saved dogs:</h1>
<h3>You have <%=@user.dogs.count%> saved dogs</h3>
<ul>
  <%@user.dogs.each do |dog|%>

  <li><%=link_to dog.breed, dog_path(dog)%></li>
  <% end %>
</ul>
<%end%>

<form>
  <button class="btn btn-dark" formaction="/users/<%=@user.id%>/edit">Update Personal Info</button>
</form>
